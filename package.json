{
  "name": "firestore-erd",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "install:all": "(npm install) && (cd server && npm install)",
    "dev:compose": "docker-compose -f ./server/compose-dev.yml up --build -d && npm run dev",
    "prod:compose": "docker-compose -f ./server/compose-prod.yml up --build -d && npm run dev",
    "dev:server": "cd server && nodemon app.ts",
    "dev": "vite --host",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
